{
  "name": "scss-mixins-functions-variables",
  "version": "1.3.2",
  "description": "A collection of SCSS Mixins, Functions and Variables.",
  "main": "index.js",
  "scripts": {
    "styles:lint": "stylelint --fix \"**/*.scss\"",
    "styles:prettier": "prettier --write \"**/*.scss\"",
    "styles": "npm run styles:lint && npm run styles:prettier",
    "document": "sassdoc scss/**/*.scss --dest docs --verbose",
    "build": "npm run styles && npm run document"
  },
  "keywords": [
    "scss",
    "sass",
    "mixins",
    "functions",
    "variables"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absolutholz/scss-mixins-and-functions.git"
  },
  "author": "absolutholz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/absolutholz/scss-mixins-and-functions/issues"
  },
  "homepage": "https://github.com/absolutholz/scss-mixins-and-functions#readme",
  "devDependencies": {
    "prettier": "^1.18.2",
    "sassdoc": "^2.7.1",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.11.0"
  }
}
